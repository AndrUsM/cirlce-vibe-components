{
  "compilerOptions": {
    "baseUrl": "./",
    "declarationDir": "build",
    "outDir": "./build",
    "sourceMap": true,
    "target": "esNext",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "preserveConstEnums": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "pretty": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules",
    "build",
  ],
  "paths": {
    "@custom-types/*": [
      "types/*"
    ],
  }
}